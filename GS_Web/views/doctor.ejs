<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('include/head', {}); %>
</head>

<body>
	<%- include('include/nav', {name:"doctor"}); %>
	<!-- END nav -->
	<%- include('include/hero-wrap', {name:"doctor"}); %>

	<section class="ftco-section">
		<div class="container">
			<div class="row">

				<% if(data.code>=0){data.data.forEach(d => { %>
				<div class="col-md-6 col-lg-3 ftco-animate">
					<div class="staff">
						<div class="img-wrap d-flex align-items-stretch">
							<div class="img align-self-stretch" style="background-image: url(images/doc-1.jpg);"></div>
						</div>
						<div class="text pt-3 text-center">
							<h3><%=d.monster_name%></h3>
							<span class="position mb-2"><%=d.user_id%></span>
							<div class="faded">
								<p>題組:<%=d.combination_title%> 關卡:<%=d.level_title%>
									ID:<%=d.monster_id%><br><%=d.story%></p>
								<ul class="ftco-social text-center">
									<li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
									<li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
									<li class="ftco-animate"><a href="#"><span class="icon-google-plus"></span></a></li>
									<li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
								</ul>
							</div>
						</div>
					</div>
				</div>
				<%})}else{%>null<% }; %>
			</div>

			<!-- 分頁導覽列 -->
			<div class="row no-gutters my-5">
				<div class="col text-center">
					<div class="block-27">
						<ul>
							<li>第 <%=data.pageNo%> 頁</li>

							<% if(data.startPage>1){ %>
							<li><a href="/doctor?pageNo=<%=(data.startPage-data.navSegments)%>"><i
										class="ion-ios-arrow-back"></i></a></li>
							<% } %>

							<% for(var i=data.startPage; i<data.startPage+data.navSegments; i++) {%>
							<% if(i<=data.totalPage){ %>
							<li class="<%if(i==data.pageNo){ %>active<%}%>"><a href="/doctor?pageNo=<%=i%>">
								<%=i%>
							</a></li>
							<% }} %> 
								
								<% if(data.startPage+data.navSegments<=data.totalPage){ %>
									<li><a href="/doctor?pageNo=<%=(data.startPage+data.navSegments)%>"> <i class="ion-ios-arrow-forward"></i></a>
								</li>
								<% } %>
						</ul>
					</div>
				</div>
			</div>

		</div>
	</section>

	<%- include('include/foot', {}); %>



	<!-- loader -->
	<%- include('include/loader', {}); %>

</body>

</html>