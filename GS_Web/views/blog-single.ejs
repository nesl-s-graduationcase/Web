					<div class="pt-5 mt-5" style="padding-top: 0 !important;margin-top:0 !important;">
						<h3 class="mb-5 h4 font-weight-bold">Comments:</h3>
						<ul class="comment-list">
							<% var i=0%>
							<% i=f(blog_data.data[0].reply, i)%>
							<% function f(a, i){%>
								<% if(i!=0){%>
									<ul class="children" style="padding-top: 0;">
								<% }%>
								<% if(a.length!=0){%>
								<% a.forEach(b=>{%>
									
												<% i=i+1%>
												<li class="comment">
													<div class="vcard bio">
														<img src="images/person_1.jpg" alt="Image placeholder">
													</div>
													<div class="comment-body">
														<h3>John Doe</h3>
														<div class="meta mb-2">January 03, 2019 at 2:21pm</div>
														<p><%-b["context"]%></p>
														<p>
															<a id="modal-reply<%= i%>" href="#modal-container-reply<%= i%>" role="button" class="reply" data-toggle="modal">Reply</a>
														</p>
													</div>
												</li>
												
												<% i=f(b["reply"],i)%>
								<%}) %>
								<% }%>
								<% if(i!=0){%>
									</ul>
								<% }%>
							<% return i; }%>
							
							<!-- END comment-list -->
					</div>
