					</div>

					<div class="sidebar-box ftco-animate">
						<h3>Tag Cloud</h3>
						<ul class="tagcloud m-0 p-0">
							<% if(all_tag.code>=0){all_tag.data.forEach(d => { %>
							<a href="#" class="tag-cloud-link"><%=d.tag_title%></a>
							<%})}else{%>null<% }; %>
						</ul>
					</div>
				</div><!-- END COL -->
			</div>
		</div>
	</section>
	
	<% for(var j=1;j<=i;j++){%>
	<div class="modal fade" id="modal-container-reply<%= j%>" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
